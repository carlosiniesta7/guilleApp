<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/listFragment">

    <fragment
            android:id="@+id/listFragment"
            android:label="fragment_list"
            android:name="com.example.guilleapp.view.main.countrylist.CountryListFragment"
            tools:layout="@layout/fragment_list">
        <action
                android:id="@+id/action_showDetail"
                app:destination="@id/detailFragment"/>
    </fragment>

    <fragment
            android:id="@+id/detailFragment"
            android:label="fragment_detail"
            android:name="com.example.guilleapp.view.main.countrydetail.CountryDetailFragment"
            tools:layout="@layout/fragment_detail">

        <argument
            android:name="modelIn"
            app:argType="com.example.guilleapp.view.main.countrydetail.CountryDetailViewModelIn"/>

    </fragment>


</navigation>
